<html lang="en">
<%- include("./../partials/head.ejs") %>

<body>
  <%- include("./../partials/nav.ejs") %>

  <div class="row container">

    <% if (blogs.length > 0) { %>
      <% blogs.forEach(blog => { %>
        <div class="col s4 p5">
          <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <img class="activator" src="./../assets/icons/office.jpg">
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4"><%= blog.title %>
                <i class="material-icons right">more_vert</i>
              </span>
              <p>
                <a href="/blogs/<%= blog._id %>">More Details</a>
                <% if (blog.type == 1) { %>
                  <a class="ml10 green-text"><i class="material-icons">thumb_up</i></a>
                  <a class="ml10 hoverCss tooltipped" data-position="bottom" data-tooltip="Click me to dislike this blog" onclick="blogLikeDissLikeFunction(2,'<%= blog._id %>')"><i class="material-icons">thumb_down</i></a>
                <% } else if (blog.type == 2) { %>
                  <a class="ml10 hoverCss tooltipped" data-position="bottom" data-tooltip="Click me to like this blog" onclick="blogLikeDissLikeFunction(1,'<%= blog._id %>')"><i class="material-icons">thumb_up</i></a>
                  <a class="ml10 red-text"><i class="material-icons">thumb_down</i></a>
                <% } else { %>
                  <a class="ml10 hoverCss tooltipped" data-position="bottom" data-tooltip="Click me to like this blog" onclick="blogLikeDissLikeFunction(1,'<%= blog._id %>')"><i class="material-icons">thumb_up</i></a>
                  <a class="ml10 hoverCss tooltipped" data-position="bottom" data-tooltip="Click me to dislike this blog" onclick="blogLikeDissLikeFunction(2,'<%= blog._id %>')"><i class="material-icons">thumb_down</i></a>
                <% } %>
                <!-- <span>Like : <%= blog.type %></span> -->
              </p>
            </div>
            <div class="card-reveal teal lighten-4">
              <span class="card-title grey-text text-darken-4"><%= blog.title %><i class="material-icons right">close</i></span>
              <p class='scroll'><%= blog.body %></p>
              <div class="row mb0">
                <div class="col s6 center">Total Likes : <span class="green-text"><%= blog.likeCount %></span></div>
                <div class="col s6 center">Total Dislikes : <span class="red-text"><%= blog.disLikeCount %></span></div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <p>There are no blogs to display...</p>
    <% } %>
  </div>

  <%- include("./../partials/footer.ejs") %>
  <script type="text/javascript" src="./../assets/js/blog/index.js"></script>
</body>
</html>